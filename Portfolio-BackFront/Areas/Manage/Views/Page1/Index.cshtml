@model List<Page1>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a  class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title1</th>
                <th scope="col">Title2</th>
                <th scope="col">Subtitle</th>
                <th scope="col">Order</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
              
<tr>
    <th scope="row"></th>
    <td>@item.Id</td>
    <td>@item.Namber</td>
    <td>@item.Name</td>
    <td>@item.Surname</td>
    <td>@item.Description</td>
    <td>@item.Email</td>
    
    <td>
        <a asp-controller="Page1" asp-action="Edit"  asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete"asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
    </td>
</tr>           }

        </tbody>
    </table>
</div>

